{
  "name": "ontouml-server",
  "version": "0.0.1",
  "description": "Javascript library utility for manipulating OntoUML models.",
  "license": "Apache-2.0",
  "engines": {
    "node": "10.x"
  },
  "main": "build/src/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "start:dev": "npm-run-all -p format:watch start:watch",
    "start:watch": "nodemon index.ts",
    "format:watch": "onchange '**/*.ts' -- prettier --write {{changed}}",
    "clean": "rimraf coverage build tmp",
    "build": "rm -rf ./dist && npm run build:js",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "build:watch": "TS_NODE_FILES=true tsc -w -p tsconfig.release.json",
    "lint": "tslint -c tslint.json -p tsconfig.json 'src/**/*.ts'",
    "test": "jest --coverage",
    "test:clean": "jest --clearCache",
    "test:watch": "jest --watch",
    "docs": "node_modules/.bin/apidoc -i api/routes/ -o ./docs/",
    "pre-push": "npm run lint && npm test"
  },
  "apidoc": {
    "url": "https://api.ontouml.org/v1"
  },
  "_moduleAliases": {
    "@configs": "src/configs",
    "@error": "src/error",
    "@routes": "src/routes",
    "@utils": "src/utils"
  },
  "dependencies": {
    "@babel/runtime": "^7.6.3",
    "@types/express": "^4.17.2",
    "body-parser": "^1.19.0",
    "esm": "^3.2.25",
    "express": "^4.17.1",
    "memoizee": "^0.4.14",
    "nodemon": "^1.19.4",
    "ontouml-js": "^0.1.3",
    "regenerator-runtime": "^0.13.3",
    "tslib": "~1.10.0",
    "uniqid": "^5.2.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@babel/preset-typescript": "^7.6.0",
    "@babel/register": "^7.6.2",
    "@types/jest": "^24.0.18",
    "@types/node": "^10.14.17",
    "apidoc": "^0.19.0",
    "babel-jest": "^24.9.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "dotenv": "^8.2.0",
    "grpc_tools_node_protoc_ts": "^2.5.5",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "module-alias": "^2.2.2",
    "npm-run-all": "^4.1.5",
    "onchange": "^6.1.0",
    "prettier": "~1.18.2",
    "rimraf": "^3.0.0",
    "ts-jest": "^24.0.0",
    "tslint": "~5.19.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-microsoft-contrib": "~6.2.0",
    "tsutils": "~3.17.0",
    "typescript": "~3.6.0"
  }
}
